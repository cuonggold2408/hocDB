<h1>Thêm người dùng</h1>
<form action="" method="post">
  <div class="mb-3">
    <label for="">Tên</label>
    <input
      type="text"
      name="name"
      value="<%= req.old.name %>"
      class="form-control"
      placeholder="Tên..."
    />
    <span class="text-danger"> <%= req.errors.name %> </span>
  </div>
  <div class="mb-3">
    <label for="">Email</label>
    <input
      type="text"
      name="email"
      value="<%= req.old.email %>"
      class="form-control"
      placeholder="Email..."
    />
    <span class="text-danger"> <%= req.errors.email %> </span>
    <span class="text-danger"> <%= req.errors.checkEmail %> </span>
  </div>
  <div class="mb-3">
    <label for="">Trạng thái</label>
    <select name="status" class="form-select">
      <option value="0" <%= +req.old.status === 0 ? 'selected': ''  %>>Chưa kích hoạt</option>
      <option value="1" <%= +req.old.status === 1 ? 'selected': ''  %>>Kích hoạt</option>
    </select>
    <span class="text-danger"> <%= req.errors.status %> </span>
  </div>
  <button class="btn btn-primary">Lưu</button>
  <a href="/users" class="btn btn-danger">Hủy</a>
</form>
