<h1 class="text-center mt-4">Quên mật khẩu</h1>
<form action="" method="POST">
  <div class="container" style="max-width: 700px">
    <input
      class="form-control p-2 mt-1 rounded border"
      type="email"
      name="email"
      placeholder="Vui lòng nhập email..."
    />
    <button class="btn btn-primary mt-3">Xác nhận</button>
    <% if (sendedFailed.length) { %>
    <p class="alert alert-danger"><%= sendedFailed[0] %></p>
    <% } %> <% if (sendedSuccess.length) { %>
    <p class="alert alert-success"><%= sendedSuccess[0] %></p>
    <% } %>
  </div>
</form>
