<h1 class="text-center mt-4">Đăng ký</h1>
<form action="" method="POST">
  <div class="container" style="max-width: 700px">
    <div class="d-flex flex-column">
      <label for="" class="fs-4">Tên</label>
      <input
        type="text"
        name="name"
        placeholder="Tên..."
        class="form-control p-2 mt-1 rounded border"
        value="<%= req.old.name  %>"
      />
      <span class="text-danger"><%= req.errors.name %></span>
    </div>
    <div class="d-flex flex-column mt-3">
      <label for="" class="fs-4">Email</label>
      <input
        type="email"
        placeholder="Email..."
        name="email"
        class="form-control p-2 mt-1 rounded border"
        autocomplete="on"
        value="<%= req.old.email  %>"
      />
      <span class="text-danger"><%= req.errors.email %></span>
    </div>

    <div class="d-flex flex-column mt-3">
      <label for="" class="fs-4">Password</label>
      <input
        type="password"
        name="password"
        placeholder="Password..."
        class="form-control p-2 mt-1 rounded border"
      />
      <span class="text-danger"><%= req.errors.password %></span>
    </div>

    <div class="d-flex">
      <a href="/auth/dang-nhap" class="btn btn-info mt-3 flex-grow-1 me-3"
        >Về trang đăng nhập
      </a>
      <button class="btn btn-primary mt-3 margin flex-grow-1">Xác nhận</button>
    </div>
  </div>
</form>
